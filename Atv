public class Consultas {
     public static void main(String[] args) {
        Scanner tec = new Scanner(System.in);

        System.out.println("Ola, Bom Dia");
        System.out.println("Coloque o seu nome");
        String nome;
        nome = tec.nextInt;
        
        System.out.println("Coloque a sua idade");
        int idade = tec.nexInt();
        
        System.out.println("Voce deseja ver a sua consulta? se sim digite 1 e se nao 2");
        int consulta = tec.nexInt();
        
        System.out.println("Digite o dia da consulta");
        int dia = tec.nexInt();
        
        if (consulta == 1)
            System.out.println("Consulta agendada para o dia: " + dia);
        } else {   
            System.out.println("Consulta nao visualizada");
        }
        
        

     
     }
 }   


